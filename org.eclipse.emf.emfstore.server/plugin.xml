<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension-point id="org.eclipse.emf.emfstore.server.startuplistener" name="StartupListener" schema="schema/org.eclipse.emf.emfstore.server.startuplistener.exsd"/>
   <extension-point id="org.eclipse.emf.emfstore.server.poststartuplistener" name="PostStartupListener" schema="schema/org.eclipse.emf.emfstore.server.poststartuplistener.exsd"/>
   <extension-point id="org.eclipse.emf.emfstore.server.authenticationfactory" name="Authentication Factory" schema="schema/org.eclipse.emf.emfstore.server.authenticationfactory.exsd"/>
   <extension-point id="org.eclipse.emf.emfstore.server.locationprovider" name="Location Provider" schema="schema/org.eclipse.emf.emfstore.server.locationprovider.exsd"/>
   <extension-point id="org.eclipse.emf.emfstore.server.accesscontrol" name="Access Control" schema="schema/org.eclipse.emf.emfstore.server.accesscontrol.exsd"/>
   <extension
         id="application"
         name="EMFStore server"
         point="org.eclipse.core.runtime.applications">
      <application
            cardinality="singleton-global"
            icon="icon/unicase_big.png"
            thread="main"
            visible="true">
         <run
               class="org.eclipse.emf.emfstore.server.EmfStoreController">
         </run>
      </application>
   </extension>
   <extension
         id="server"
         name="EMFStore"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.eclipse.emf.emfstore.server.application"
            description="Server Application of EMFStore"
            name="EMFStore Server">
         <property
               name="appName"
               value="EMFStore Server">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.emf.emfstore.server.accesscontrol">
      <version
            versionNumber="1">
      </version>
      <permissionProvider
            providerClass="org.eclipse.emf.emfstore.server.accesscontrol.simple.SimplePermissionProvider">
      </permissionProvider>
      <permissionType
            description="Administrate permission"
            id="org.eclipse.emf.emfstore.server.simple.projectadmin"
            name="projectadmin"
            projectPermission="true">
      </permissionType>
      <permissionType
            description="Writer permission"
            id="org.eclipse.emf.emfstore.server.simple.projectwrite"
            name="project write permission"
            projectPermission="true">
      </permissionType>
      <permissionType
            description="Read permission"
            id="org.eclipse.emf.emfstore.server.simple.projectread"
            name="Read permission"
            projectPermission="true">
      </permissionType>
      <permissionType
            description="global administrate permission, create projects etc."
            id="org.eclipse.emf.emfstore.server.simple.globaladmin"
            name="Global Admin"
            projectPermission="false">
      </permissionType>
   </extension>
</plugin>
